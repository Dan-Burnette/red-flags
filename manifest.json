{
  "manifest_version": 3,
  "name": "Red Flags",
  "description": "Highlight toxic language in job postings",
  "version": "1.0",
  "action": {
    "default_popup": "red-flags.html",
    "default_icon": "red-flag.png"
  },
  "content_scripts": [
    {
      "js": ["red-flags.js"],
      "css": ["red-flags.css"],
      "matches": [ "<all_urls>" ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "red-flag.png" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
